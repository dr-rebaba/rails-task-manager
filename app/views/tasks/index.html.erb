<h1>Tasks</h1>

<% @tasks.each do |task| %>
  <div>
    <h3><%= link_to task.title, task_path(task) %></h3>
    <p><%= task.details %></p>
    <p><%= task.completed ? 'Completed' : 'Incomplete' %></p>
    <%= link_to 'Edit', edit_task_path(task) %>
    <%= link_to 'Delete', destroy_task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>
<% end %>

<h3><%= link_to 'New Task', new_task_path %></h3>
